@{
    ViewBag.Title = "Đăng ký";
}

<div class="bg-main main">
    <div class="signup-form">
        <div class="form">
            <h4>Đăng ký</h4>
            <div class="form-group row ">
                <input type="email" class="form-control" name="email" placeholder="Email" required="required">
            </div>
            <div class="form-group row ">
                <input type="text" class="form-control" name="username" placeholder="Nick name" required="required">
            </div>
            <div class="form-group row ">
                <input type="password" class="form-control" name="password" placeholder="Mật khẩu" required="required">
            </div>
            <div class="form-group row ">
                <input type="password" class="form-control" name="rePassword" placeholder="Nhập lại mật khẩu" required="required">
            </div>
            <div class="row form-group">
                <input type="password" class="form-control col-8" name="code" placeholder="Mã xác thực" required="required">
                <button type="button" class="form-control col-3 offset-1 btn-info" id="send-code">Gửi mã</button>
            </div>
            <div class="form-group row">
                <button id="btn-regi" class="btn btn-success btn-lg btn-block">Đăng ký</button>
            </div>
        </div>
        <div class="text-center">
            <span>Bạn đã có tài khoản?</span> <a href="@Url.Action("Login")" class="text-info">Đăng nhập</a>
        </div>
    </div>
</div>