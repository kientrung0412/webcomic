@using Model.EF
@using Model.Models
@{
    ViewBag.Title = "Hồ sơ";
    Layout = "~/Views/Shared/_User.cshtml";

    user user = SessionUser.GetSession();
}

<div class="profile ">

    <div class="row ">

        <div class="col-md-4 col-12">
            <div class="cover bg-main">
                <div class="cover-avatar">
                    <div class="profile-avatar">
                        <img src="@user.Avatar" class="avatar-profile img-fluid" alt="">
                    </div>
                </div>
                <div class="role bg-main">
                    <p>@user.Role.RoleName</p>
                </div>
            </div>

        </div>

        <div class="col-md-8 col-12">
            <div class="cover bg-main">
                <form action="" method="post">
                    <div class="form-group row">
                        <label for="input_email" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input id="input_email" value="@user.UserMail" type="email" name="email" placeholder="Email" disabled="disabled" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="input_name" class="col-sm-2 col-form-label">Tên</label>
                        <div class="col-sm-10">
                            <input id="input_name" value="@user.Username" type="text" name="username" placeholder="Tên" disabled="disabled"  class="form-control">
                        </div>
                    </div>
                    @* <div class="form-group row"> *@
                    @*     <button type="submit" class="btn float-right last-chapter">Lưu</button> *@
                    @* </div> *@
                </form>
            </div>
        </div>

    </div>
</div>