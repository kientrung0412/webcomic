@{
    ViewBag.Title = "Quyên mật khẩu";
}
<div class="bg-main main">
    <div class="signup-form">
        <div class="form">

            <h4>Lấy lại mật khẩu</h4>

            <div class="form-group row">
                <input type="email" class="form-control" name="mail" placeholder="Email" required="required">
            </div>
            <div class="form-group row">
                <input type="text" class="form-control" name="username" placeholder="Nick name" required="required">
            </div>
            <div class="form-group row">
                <button class="btn btn-success btn-lg btn-block" id="forgot-password">Lấy lại mật khẩu</button>
            </div>

        </div>
        <div class="text-center">
            <p class="mt-2">Bạn đã có tài khoản? <a href="@Url.Action("Login")" class="text-info">Đăng nhập</a></p>
        </div>
    </div>
</div>