@using Model.EF
@using Model.Models
@{
    user user = Session["user"] as user;

}

<!doctype html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="icon" href="~/Upload/Config/logo.png">

    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sarabun">
    <link rel="stylesheet" href="~/Content/jquery-confirm.min.css">
    <link rel="stylesheet" href="~/Content/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Content/mystyle.css">

</head>
<body >

@* slidebar *@
<div class="d-flex" id="wrapper">
    <div class="bg-main " id="sidebar-wrapper">
        <div class="sidebar-heading">
            <a href="@Url.Action("Index", "User")" title="">Truyện tranh</a>
        </div>
        <div class="list-group list-group-flush">
            <nav class="nav flex-column nav-pills user" id="v-pills-tab side" role="tablist"
                 aria-orientation="vertical">
                <a class="nav-link " href="@Url.Action("Index", "User")"
                   aria-controls="v-pills-home" aria-selected="true">
                    Hồ sơ
                </a>

                @if (user.RoleId < 3)
                {
                    <a class="nav-link" href="@Url.Action("UpComic", "User")">
                        Yêu cầu đăng truyện
                    </a>
                    <a class="nav-link" href="@Url.Action("ComicsUser", "User")">
                        Danh sách đã đăng
                    </a>
                }

                @if (user.RoleId == 1)
                {
                    <a class="nav-link" href="@Url.Action("Censorship", "User")">
                        Danh sách duyệt
                    </a>
                    <a class="nav-link" href="@Url.Action("ListAllComic", "User")">
                        Danh sách truyện
                    </a>
                    <a class="nav-link" href="@Url.Action("Category", "User")">
                        Danh sách thể loại
                    </a>
                    <a class="nav-link" href="@Url.Action("Users", "User")">
                        Danh sách tài khoản
                    </a>
                    <a class="nav-link" href="@Url.Action("Users", "User")">
                        Danh sách bình luận bị ẩn
                    </a>
                }


                @* <a class="nav-link"  href=""  aria-controls="v-pills-settings" *@
                @*    aria-selected="false"> *@
                @*     Thay đổi mật khẩu *@
                @* </a> *@
            </nav>

        </div>
    </div>
    <div id="page-content-wrapper">
        <nav class="navbar bg-main">

            <button class="btn" id="menu-toggle">
                <i class="ion-android-menu"></i>
            </button>

            <div class="nav-item">
                <a href="@Url.Action("Index", "Home")" class="nav-link">Đọc truyện</a>
            </div>
        </nav>
        <div class="container-fluid">

            @RenderBody()

        </div>
    </div>

</div>
<a class="btn-top" href="javascript:void(0);" title="Lên" style="display: inline;">
    <i class="ion-arrow-up-c"></i>
</a>


<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/boostrap.min.js"></script>
<script src="~/Scripts/popper.min.js"></script>
<script src="~/Scripts/owl.carousel.min.js"></script>
<script src="~/Scripts/jquery-confirm.min.js"></script>
<script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>
<script src="~/Scripts/load-bg.js"></script>
<script src="~/Scripts/alert.js"></script>
<script src="~/Scripts/slide.js"></script>
</body>
</html>